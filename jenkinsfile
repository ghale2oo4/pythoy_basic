pipeline {
    /* 1. Define where to run (any available agent) */
    agent {    
            label 'docker-agent'
    }

    /* 2. Define the workflow stages */
    stages {
        stage('Initialize') {
            steps {
                echo 'ğŸš€ Starting the DevOps Pipeline...'
                echo "Build Number: ${env.BUILD_NUMBER}"
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ›  Building the application...'
                // In a real project, this would be: sh './mvnw clean install'
                sh 'echo "Simulating Maven Build..." && sleep 2'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running Unit Tests...'
                sh 'echo "Tests Passed!"'
            }
        }

        stage('Deploy') {
            steps {
                echo 'ğŸ“¦ Deploying to Docker Hub...'
                sh 'echo "Image Pushed Successfully"'
            }
        }
    }

    /* 3. Actions to take after the stages finish */
    post {
        always {
            echo 'ğŸ§¹ Cleaning up workspace...'
        }
        success {
            echo 'âœ… Success: Everything worked!'
        }
        failure {
            echo 'âŒ Danger: The build failed!'
        }
    }
}
